<div class="container">
	<form action="/addQuestion" method="post">
		<div class="form-group">
			<label for="question">Enter Question</label>
			<input type="text" name="question" id="url" placeholder="What is 1+1 = ?" class="form-control">
			<p class="help-block">Enter a question, ex( "What is 1+1 = ?")</p>
		</div>
		<div class="form-group">
			<label for="mc1">Multiple Choice 1 ( ALWAYS THE CORRECT ANSWER )</label>
			<input type="text" name="mc1" class="form-control" placeholder="6">
		</div>
		<div class="form-group">
			<label for="mc2">Multiple Choice 2</label>
			<input type="text" name="mc2" class="form-control" placeholder="1">
		</div>
		<div class="form-group">
			<label for="mc3">Multiple Choice 3</label>
			<input type="text" name="mc3" class="form-control" placeholder="3">
		</div>
		<div class="form-group">
			<label for="mc4">Multiple Choice 4</label>
			<input type="text" name="mc4" class="form-control" placeholder="102399">
		</div>
		<div class="form-group">
			<label for="howToSolve">How Do you Solve this?</label>
			<input type="text" name="howToSolve" class="form-control" placeholder="102399">
		</div>
		<div class="form-group">
			<select class="custom-select" name="category"id="category">
			<option name="category" value="addition">Addition</option>
			<option name="category" value="substraction">Subtraction</option>
			<option name="category"value="algebra">Algebra</option>
			<option name="category"value="fractions">Percentages/Fractions</option>
			<option name="category"value="wordProblem">Proportion Word Problems</option>
			<option name="category"value="easy">Easy</option>
			<option name="category"value="medium">Medium</option>
			<option name="category"value="hard">Hard</option>
			<option name="category"value="demo">Demo</option>
			</select>
		</div>
		<button type="submit" class="btn btn-default">Submit</button>
	</form>
</div>

